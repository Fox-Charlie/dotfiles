set number
set relativenumber

Plug 'machakann/vim-highlightedyank'
set incsearch

set hlsearch
set surround
set commentary # quick toggle for commenting code: gc in visual mode or gcc for current line
set scrolloff=5

" Map Ctrl+h/j/k/l to move between splits
map <C-h> <C-w>h
map <C-j> <C-w>j
map <C-k> <C-w>k
map <C-l> <C-w>l

" Move tabs
map <C-n> :action NextTab<CR>
map <C-p> :action PreviousTab<CR>