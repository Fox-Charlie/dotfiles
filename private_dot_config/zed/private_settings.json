// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "inlay_hints": {
    "show_value_hints": false
  },
  "git": {
    "inline_blame": {
      "delay_ms": 300
    }
  },
  "search": {
    "center_on_match": false
  },
  "use_smartcase_search": true,
  "relative_line_numbers": "enabled",
  "show_signature_help_after_edits": true,
  "auto_signature_help": true,
  "buffer_line_height": "standard",
  "context_servers": {
    "mcp-server-context7": {
      "source": "extension",
      "enabled": true,
      "settings": {
        "context7_api_key": ""
      }
    }
  },
  "icon_theme": "Soft Charmed Icons",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "vim_mode": true,
  "terminal": {
    "font_family": "DankMono Nerd Font"
  },
  "minimap": {
    "show": "never"
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "buffer_font_fallbacks": [
    "JetBrainsMono NF",
    "JetBrains Mono",
    "Menlo",
    "Monaco",
    "Courier New",
    "monospace"
  ],
  "buffer_font_family": "DankMono Nerd Font",
  "base_keymap": "JetBrains",
  "ui_font_size": 14,
  "buffer_font_size": 13.0,
  "theme": "Gruvbox Dark Hard",

  "experimental.theme_overrides": {
    "background.appearance": "blurred",
    // Gruvbox Dark overrides
    "background": "#1d2021e0", // dark0 + alpha
    "status_bar.background": "#1d2021e0",
    "title_bar.background": "#1d2021e0",
    "elevated_surface.background": "#1d2021e0",
    "surface.background": "#1d2021e0",

    "editor.background": "#00000000",
    "editor.gutter.background": "#00000000",

    // line numbers
    "editor.line_number": "#bdae9399", // light3 + alpha
    "editor.active_line_number": "#458588", // blue
    "editor.active_line.background": "#50494540", // dark2 + alpha

    // indent guides
    "editor.indent_guide": "#92837476", // gruvbox grey @ a bit transparent
    "editor.indent_guide_active": "#928374e0", // gruvbox grey @ less transparent

    // borders
    "border": "#665c5480", // dark3 + alpha
    "border.variant": "#665c5450", // dark3 + weaker alpha

    "hint.background": "#3c3836cc", // dark1 + alpha

    // tabs
    "tab_bar.background": "#00000000",
    "tab.active_background": "#45858820",
    "tab.inactive_background": "#00000000",
    "element.selected": "#45858820",

    // panel
    "panel.background": "#1d202100",
    "panel.indent_guide": "#45858812",
    "panel.indent_guide_hover": "#45858816",
    "panel.indent_guide_active": "#4585881a",
    "panel.focused_border": "#00000000",

    // misc UI
    "toolbar.background": "#00000000",
    "terminal.background": "#00000000",
    "scrollbar.track.background": "#00000000",
    "scrollbar.track.border": "#00000000",
    "scrollbar.thumb.background": "#45858820",

    // ghost elements
    "ghost_element.background": "#45858805",
    "ghost_element.hover": "#45858810",
    "ghost_element.active": "#45858815",
    "ghost_element.selected": "#45858820",

    "drop_target.background": "#45858820",
    "element.hover": "#45858810",

    "editor.highlighted_line.background": "#45858825"
  }
}
